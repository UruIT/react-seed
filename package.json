{
	"name": "react-seed",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/UruIT/react-seed.git",
	"author": "UruIT",
	"license": "MIT",
	"scripts": {
		"precommit": "lint-staged",
		"prepush": "npm run test",
		"stats": "webpack --profile --json > stats.json",
		"build": "webpack",
		"start": "webpack-dev-server --open",
		"test": "jest",
		"tdd": "jest --watchAll",
		"lint": "eslint . --ext .js,.jsx --ignore-path .gitignore --cache",
		"serve": "npm run build && http-server build/ -p 8081"
	},
	"lint-staged": {
		"*.{js,jsx}": "eslint"
	},
	"devDependencies": {
		"babel-core": "^6.24.1",
		"babel-eslint": "^7.2.3",
		"babel-loader": "^7.0.0",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-react": "^6.24.1",
		"babel-preset-react-hmre": "^1.1.1",
		"babel-preset-survivejs-kanban": "^0.3.3",
		"clean-webpack-plugin": "^0.1.16",
		"css-loader": "^0.28.1",
		"enzyme": "^2.8.2",
		"eslint": "^3.19.0",
		"eslint-loader": "^1.7.1",
		"eslint-plugin-react": "^7.0.0",
		"extract-text-webpack-plugin": "^2.1.0",
		"file-loader": "^0.11.1",
		"html-webpack-plugin": "^2.28.0",
		"html-webpack-template": "^6.0.1",
		"http-server": "^0.10.0",
		"husky": "^0.13.3",
		"istanbul-instrumenter-loader": "^2.0.0",
		"jest": "^20.0.0",
		"json-loader": "^0.5.4",
		"lint-staged": "^3.4.1",
		"node-sass": "^4.5.2",
		"npm-install-webpack-plugin": "^4.0.4",
		"raw-loader": "^0.5.1",
		"react-test-renderer": "^15.5.4",
		"resolve-url-loader": "^2.0.2",
		"sass-loader": "^6.0.4",
		"style-loader": "^0.17.0",
		"webpack": "^2.5.1",
		"webpack-dev-server": "^2.4.5",
		"webpack-merge": "^4.1.0"
	},
	"dependencies": {
		"es6-promise": "^4.1.0",
		"prop-types": "^15.5.9",
		"react": "^15.5.4",
		"react-dom": "^15.5.4",
		"react-router-dom": "^4.1.1",
		"whatwg-fetch": "^2.0.3"
	},
	"jest": {
		"moduleNameMapper": {
			"\\.(scss)$": "<rootDir>/app/components/__mocks__/styles.js"
		},
		"testPathIgnorePatterns": [
			"webpack"
		]
	}
}
