{
	"extends": [
		"eslint:recommended", "plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"jest": true
	},
	"plugins": [
		"react"
	],
	"rules": {
		"no-console": [2, {
			"allow": ["error", "warn", "info", "group", "groupEnd"]
		}],

		"jsx-quotes": [1, "prefer-double"],

		"react/jsx-no-undef": 1,
		"react/jsx-uses-react": 1,
		"react/jsx-uses-vars": 1
	}
}
